<h5>Top Bids</h5>
<table class="table table-dark table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Price</th>
      <th scope="col">User</th>
      <th scope="col">Time</th>
    </tr>
  </thead>
  <tbody>
    <% @top_bids.each_with_index do |bid, index| %>
      <tr>
        <th scope="row">
          <%= index += 1 %>
        </th>
        <td>
          <%= bid.price %>
        </td>
        <td>
          <%= bid.user.name %>
        </td>
        <td>
          <%= bid.updated_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
